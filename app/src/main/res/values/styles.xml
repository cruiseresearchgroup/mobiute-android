<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GenericButton">
        <item name="android:background">@drawable/generic_button_states</item>
        <item name="android:textColor">@drawable/generic_button_states_textcolor</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="AlertButton">
        <item name="android:background">@drawable/alert_button_states</item>
        <item name="android:textColor">@drawable/alert_button_states_textcolor</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="GenericButtonPressed">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/generic_button_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
