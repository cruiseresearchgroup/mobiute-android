<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.ute.mobi.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:text="Experiment CODE: "
        android:id="@+id/experimentid_display"
        android:layout_above="@+id/sessionid_display"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:text="Session ID: "
        android:id="@+id/sessionid_display"
        android:layout_above="@+id/instructionText"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_stop"
        android:text="@string/str_text_stop"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/AlertButton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:text="To stop the session, please press the button below"
        android:id="@+id/instructionText"
        android:layout_above="@+id/btn_stop"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_start_labeling"
        android:text="Start Labeling"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        style="@style/GenericButton"
        android:layout_below="@+id/btn_stop"
        android:layout_alignLeft="@+id/btn_stop"
        android:layout_alignStart="@+id/btn_stop"
        android:visibility="gone"/>

</RelativeLayout>

